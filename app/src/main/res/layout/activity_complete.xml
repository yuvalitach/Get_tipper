<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompleteActivity"
    android:orientation="vertical"

    >

    <ImageView
        android:id="@+id/complete_activity_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/get_tipper_logo"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/register_activity_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/conthrax_sb"
        android:layout_marginTop="40dp"
        android:text="Completed"
        android:textColor="@color/purple_700"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/complete_activity_icComplete"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_check_circle_24"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/complete_activity_btn_Exit"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Continue"
            android:background="@drawable/rect_rounded_button"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/complete_activity_btn_Back"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Continue"
            android:background="@drawable/rect_rounded_button"
            />
    </LinearLayout>

</LinearLayout>